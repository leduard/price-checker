{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "jsx": "react",
        "outDir": "dist/js",
        "rootDirs": ["src", "../shared"],
        "types": ["chrome"],
        "typeRoots": ["src/@types"],
        "paths": {
            "@utils/*": ["extension/src/utils/*"],
            "@views/*": ["extension/src/views/*"],
            "@shared/*": ["shared/*"],
            "@shared-libs/*": ["shared/libs/*"],
            "@extension/*": ["extension/*"],
        }
    }
}
